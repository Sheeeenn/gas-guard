{
  "expo": {
    "name": "GasGuard",
    "slug": "GasGuard",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo-small.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logo-big.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.gasguard.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo-big.png",
        "backgroundColor": "#ffffff"
      },
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      "@react-native-firebase/crashlytics"
    ],
    "extra": {
      "eas": {
        "projectId": "8a6cfd93-0d2a-467c-8ef3-10162f917f22"
      }
    }
  }
}
